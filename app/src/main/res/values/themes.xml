<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MiniDog" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darker</item>
        <item name="colorPrimaryVariant">@color/darker</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darker</item>
        <item name="colorSecondaryVariant">@color/darker</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/darker</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="actionBarStyle">@style/Theme.ActionBar</item>
    </style>

    <!-- Action Bar -->
    <style name="Theme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- remove shadow below action bar -->
        <item name="elevation">0dp</item>
    </style>

    <!-- Splashscreen -->
    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_splashscreen</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/orange_lighter</item>
        <item name="backgroundColor">@color/darker</item>
    </style>

    <!-- SignIn and SignUp Theme -->
    <style name="Theme.SignInSignup" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darker</item>
        <item name="colorPrimaryVariant">@color/darker</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darker</item>
        <item name="colorSecondaryVariant">@color/darker</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/orange</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/orange</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>